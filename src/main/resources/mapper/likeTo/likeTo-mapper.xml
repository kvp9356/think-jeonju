<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kvp.thinkjeonju.repository.LikeToMapper">
    <select id="findSpotsByMemberId" resultType="spot">
        SELECT * FROM SPOT
        WHERE ID = (SELECT RELATED_ID FROM LIKE_TO WHERE MEMBER_ID = #{memberId} AND ISSPOT = 's')
    </select>

    <select id="findSchedulesByMemberId" resultType="schedule">
        SELECT * FROM SCHEDULE
        WHERE ID = (SELECT RELATED_ID FROM LIKE_TO WHERE MEMBER_ID = #{memberId} AND ISSPOT = 'c')
    </select>

    <resultMap id="schedule" type="schedule">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="member_id" property="memberId"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="is_public" property="isPublic"/>
        <result column="thumnail_url" property="thumnailUrl"/>
        <result column="is_writing" property="isWriting"/>
    </resultMap>
</mapper>